<p id="notice"><%= notice %></p>

<h1>Setores</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @setors.each do |setor| %>
      <tr>
        <td><%= setor.nome %></td>
        <td><%= link_to 'Ver produtos', setor, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_setor_path(setor), class: "btn btn-default" %></td>
        <td><%= link_to 'Deletar', setor, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar novo departamento', new_setor_path, class: "btn btn-default" %>
